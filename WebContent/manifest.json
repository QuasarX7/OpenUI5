{
	"_version": "1.12.0",
	"sap.app": {
		"id": "it.tuoNamespace.progettoOpenUI5",
		"type": "application",
		"i18n": "i18n/i18n.properties",
		"title": "{{titoloApp}}",
		"description": "{{descrizioneApp}}",
		"applicationVersion": {
			"version": "1.0.0"
		},
		"dataSources" : {
			"esempioConnessioneRemota" : {
				"uri" : "https://services.odata.org/V2/Northwind/Northwind.svc/",
				"type" : "OData",
				"settings" : {
					"odataVersion" : "2.0"
				}
			}
		}
	},
  	"sap.ui": {
		"technology": "UI5",
		"deviceTypes": {
			"desktop": true,
			"tablet": true,
			"phone": true
		}
  	},
  	"sap.ui5": {
  		"rootView" : {
			"viewName" : "it.tuoNamespace.progettoOpenUI5.view.App",
			"type": "XML",
			"async": true,
			"id" : "app"
	    },
	    "dependencies": {
		  "minUI5Version": "1.60",
		  "libs": {
			"sap.m": {}
		  }
		},
		"models": {
			 "i18n": {
				"type": "sap.ui.model.resource.ResourceModel",
				"settings": {
					"bundleName": "it.tuoNamespace.progettoOpenUI5.i18n.i18n"
				}
			},
			"tuoModelRemotoOData" : {
				"dataSource" : "esempioConnessioneRemota"
			}
		},
		"routing" : {
			"config": {
				"routerClass": "sap.m.routing.Router",
				"viewType": "XML",
				"viewPath": "it.tuoNamespace.progettoOpenUI5.view",
				"controlId": "app",
				"controlAggregation": "pages",
				"async": true
			},
			"routes": [
				{
					"pattern": "",
					"name": "overview",
					"target": "overview"
				}
			],
			"targets": {
				"overview": {
					"viewId": "overview",
					"viewName": "Overview"
				}
			}
		},
		"resources" : {
			"css" : [
				{
					"uri" : "css/stileApp.css"
				}
			]
		}
  	}
}